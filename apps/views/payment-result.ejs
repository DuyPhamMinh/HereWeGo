<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partical/head'); %>
    <title>Payment Result - HereWeGo</title>
</head>

<body>
    <!-- Spinner Start -->
    <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
    <!-- Spinner End -->

    <% var activePage = 'booking'; %>
    <%- include('partical/menu'); %>

    <!-- Header Start -->
    <div class="container-fluid bg-breadcrumb">
        <div class="container text-center py-5" style="max-width: 900px;">
            <h3 class="text-white display-3 mb-4">Kết quả thanh toán</h3>
            <ol class="breadcrumb justify-content-center mb-0">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item"><a href="/booking">Booking</a></li>
                <li class="breadcrumb-item active text-white">Payment Result</li>
            </ol>    
        </div>
    </div>
    <!-- Header End -->

    <!-- Payment Result Start -->
    <div class="container-fluid py-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <% if (success) { %>
                    <div class="card border-success shadow-sm">
                        <div class="card-body text-center p-5">
                            <div class="mb-4">
                                <i class="fa fa-check-circle text-success" style="font-size: 80px;"></i>
                            </div>
                            <h2 class="card-title text-success mb-3">Thanh toán thành công!</h2>
                            <p class="card-text text-muted mb-4"><%= message %></p>
                            
                            <% if (booking) { %>
                            <div class="card bg-light mb-4">
                                <div class="card-body text-start">
                                    <h5 class="card-title mb-3">
                                        <i class="fa fa-info-circle me-2 text-primary"></i>Thông tin đặt tour
                                    </h5>
                                    <div class="row mb-2">
                                        <div class="col-sm-4"><strong>Mã đặt tour:</strong></div>
                                        <div class="col-sm-8">#<%= booking._id.toString().substring(18, 24) %></div>
                                    </div>
                                    <% if (booking.tour) { %>
                                    <div class="row mb-2">
                                        <div class="col-sm-4"><strong>Tour:</strong></div>
                                        <div class="col-sm-8"><%= booking.tour.title %></div>
                                    </div>
                                    <div class="row mb-2">
                                        <div class="col-sm-4"><strong>Điểm đến:</strong></div>
                                        <div class="col-sm-8"><%= booking.tour.destination %></div>
                                    </div>
                                    <% } %>
                                    <div class="row mb-2">
                                        <div class="col-sm-4"><strong>Ngày đặt tour:</strong></div>
                                        <div class="col-sm-8"><%= new Date(booking.bookingDate).toLocaleDateString('vi-VN') %></div>
                                    </div>
                                    <div class="row mb-2">
                                        <div class="col-sm-4"><strong>Số người:</strong></div>
                                        <div class="col-sm-8"><%= booking.numberOfPersons %> người</div>
                                    </div>
                                    <div class="row mb-2">
                                        <div class="col-sm-4"><strong>Tổng tiền:</strong></div>
                                        <div class="col-sm-8">
                                            <span class="text-primary fw-bold">$<%= booking.totalPrice.toFixed(2) %></span>
                                            <small class="text-muted">(~<%= booking.vnpayAmount ? booking.vnpayAmount.toLocaleString('vi-VN') : Math.round(booking.totalPrice * 24000).toLocaleString('vi-VN') %> VND)</small>
                                        </div>
                                    </div>
                                    <% if (booking.vnpayTransactionNo) { %>
                                    <div class="row mb-2">
                                        <div class="col-sm-4"><strong>Mã giao dịch VNPay:</strong></div>
                                        <div class="col-sm-8"><%= booking.vnpayTransactionNo %></div>
                                    </div>
                                    <% } %>
                                    <div class="row">
                                        <div class="col-sm-4"><strong>Trạng thái:</strong></div>
                                        <div class="col-sm-8">
                                            <span class="badge bg-success">Đã thanh toán</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% } %>
                            
                            <div class="d-flex gap-3 justify-content-center">
                                <a href="/booking/my-bookings" class="btn btn-primary">
                                    <i class="fa fa-list me-2"></i>Xem đặt tour của tôi
                                </a>
                                <a href="/packages" class="btn btn-outline-primary">
                                    <i class="fa fa-arrow-left me-2"></i>Tiếp tục đặt tour
                                </a>
                            </div>
                        </div>
                    </div>
                    <% } else { %>
                    <div class="card border-danger shadow-sm">
                        <div class="card-body text-center p-5">
                            <div class="mb-4">
                                <i class="fa fa-times-circle text-danger" style="font-size: 80px;"></i>
                            </div>
                            <h2 class="card-title text-danger mb-3">Thanh toán thất bại</h2>
                            <p class="card-text text-muted mb-4"><%= message %></p>
                            
                            <% if (booking) { %>
                            <div class="card bg-light mb-4">
                                <div class="card-body text-start">
                                    <h5 class="card-title mb-3">
                                        <i class="fa fa-info-circle me-2 text-primary"></i>Thông tin đặt tour
                                    </h5>
                                    <div class="row mb-2">
                                        <div class="col-sm-4"><strong>Mã đặt tour:</strong></div>
                                        <div class="col-sm-8">#<%= booking._id.toString().substring(18, 24) %></div>
                                    </div>
                                    <% if (booking.tour) { %>
                                    <div class="row mb-2">
                                        <div class="col-sm-4"><strong>Tour:</strong></div>
                                        <div class="col-sm-8"><%= booking.tour.title %></div>
                                    </div>
                                    <% } %>
                                    <div class="row mb-2">
                                        <div class="col-sm-4"><strong>Tổng tiền:</strong></div>
                                        <div class="col-sm-8">
                                            <span class="text-primary fw-bold">$<%= booking.totalPrice.toFixed(2) %></span>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-4"><strong>Trạng thái:</strong></div>
                                        <div class="col-sm-8">
                                            <span class="badge bg-warning">Chưa thanh toán</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% } %>
                            
                            <div class="d-flex gap-3 justify-content-center">
                                <% if (booking && booking.paymentStatus === 'pending') { %>
                                <button type="button" class="btn btn-primary" id="retryPaymentBtn" data-booking-id="<%= booking._id %>">
                                    <i class="fa fa-redo me-2"></i>Thử thanh toán lại
                                </button>
                                <% } %>
                                <a href="/booking/my-bookings" class="btn btn-outline-primary">
                                    <i class="fa fa-list me-2"></i>Xem đặt tour của tôi
                                </a>
                                <a href="/packages" class="btn btn-outline-secondary">
                                    <i class="fa fa-arrow-left me-2"></i>Quay lại
                                </a>
                            </div>
                        </div>
                    </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
    <!-- Payment Result End -->

    <%- include('partical/footer'); %>

    <script>
        // Retry payment button handler
        document.getElementById('retryPaymentBtn')?.addEventListener('click', async function() {
            const bookingId = this.getAttribute('data-booking-id');
            const btn = this;
            
            // Disable button and show loading
            btn.disabled = true;
            btn.innerHTML = '<i class="fa fa-spinner fa-spin me-2"></i>Đang xử lý...';
            
            try {
                const response = await fetch(`/booking/${bookingId}/payment/vnpay`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });
                
                const data = await response.json();
                
                if (data.success && data.paymentUrl) {
                    // Redirect to VNPay payment page
                    window.location.href = data.paymentUrl;
                } else {
                    alert('Có lỗi xảy ra: ' + (data.message || 'Không thể tạo link thanh toán'));
                    btn.disabled = false;
                    btn.innerHTML = '<i class="fa fa-redo me-2"></i>Thử thanh toán lại';
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Có lỗi xảy ra khi tạo link thanh toán. Vui lòng thử lại.');
                btn.disabled = false;
                btn.innerHTML = '<i class="fa fa-redo me-2"></i>Thử thanh toán lại';
            }
        });
    </script>
</body>

</html>

