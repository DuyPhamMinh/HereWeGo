<!DOCTYPE html>
<html lang="en">

<head>
    <title>Bookings - Admin Dashboard</title>
    <%- include('partical/head'); %>
</head>

<body>
    <div class="wrapper">
        <%- include('partical/sidebar'); %>
        <main class="main-content">
            <%- include('partical/navbar'); %>

            <div class="container-fluid px-4 py-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center mb-4">
                    <h1 class="h3 mb-0">Bookings Management</h1>
                    <button type="button" class="btn btn-primary btn-sm">
                        <i class="fa fa-plus me-2"></i>New Booking
                    </button>
                </div>

                <div class="row mb-4">
                    <div class="col-md-3">
                        <div class="card">
                            <div class="card-body text-center">
                                <h3 class="text-primary mb-0"><%= typeof totalBookingsCount !== 'undefined' ? totalBookingsCount : 0 %></h3>
                                <small class="text-muted">Total Bookings</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card">
                            <div class="card-body text-center">
                                <h3 class="text-success mb-0"><%= typeof confirmedCount !== 'undefined' ? confirmedCount : 0 %></h3>
                                <small class="text-muted">Confirmed</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card">
                            <div class="card-body text-center">
                                <h3 class="text-warning mb-0"><%= typeof pendingCount !== 'undefined' ? pendingCount : 0 %></h3>
                                <small class="text-muted">Pending</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card">
                            <div class="card-body text-center">
                                <h3 class="text-danger mb-0"><%= typeof cancelledCount !== 'undefined' ? cancelledCount : 0 %></h3>
                                <small class="text-muted">Cancelled</small>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Search and Filter -->
                <div class="card mb-4">
                    <div class="card-body">
                        <form method="GET" action="/admin/bookings" class="row g-3">
                            <div class="col-md-4">
                                <input type="text" class="form-control" name="search" placeholder="Search by name, email, phone..." value="<%= typeof search !== 'undefined' ? search : '' %>">
                            </div>
                            <div class="col-md-3">
                                <select class="form-select" name="status">
                                    <option value="">All Status</option>
                                    <option value="pending" <%= typeof statusFilter !== 'undefined' && statusFilter === 'pending' ? 'selected' : '' %>>Pending</option>
                                    <option value="confirmed" <%= typeof statusFilter !== 'undefined' && statusFilter === 'confirmed' ? 'selected' : '' %>>Confirmed</option>
                                    <option value="cancelled" <%= typeof statusFilter !== 'undefined' && statusFilter === 'cancelled' ? 'selected' : '' %>>Cancelled</option>
                                    <option value="completed" <%= typeof statusFilter !== 'undefined' && statusFilter === 'completed' ? 'selected' : '' %>>Completed</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <select class="form-select" name="limit">
                                    <option value="10" <%= typeof limit !== 'undefined' && limit == 10 ? 'selected' : '' %>>10 per page</option>
                                    <option value="25" <%= typeof limit !== 'undefined' && limit == 25 ? 'selected' : '' %>>25 per page</option>
                                    <option value="50" <%= typeof limit !== 'undefined' && limit == 50 ? 'selected' : '' %>>50 per page</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <button type="submit" class="btn btn-primary me-2">
                                    <i class="fa fa-search me-2"></i>Search
                                </button>
                                <a href="/admin/bookings" class="btn btn-outline-secondary">
                                    <i class="fa fa-refresh me-2"></i>Reset
                                </a>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h6 class="mb-0">All Bookings</h6>
                    </div>
                    <div class="card-body">
                        <% if (typeof error !== 'undefined' && error) { %>
                        <div class="alert alert-danger">
                            <i class="fa fa-exclamation-circle me-2"></i><%= error %>
                        </div>
                        <% } %>

                        <% if (typeof bookings !== 'undefined' && bookings.length > 0) { %>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Booking ID</th>
                                        <th>Customer</th>
                                        <th>Tour</th>
                                        <th>Booking Date</th>
                                        <th>Guests</th>
                                        <th>Total</th>
                                        <th>Status</th>
                                        <th>Payment</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% bookings.forEach(function(booking) { %>
                                    <tr>
                                        <td>#<%= booking._id.toString().substring(18, 24) %></td>
                                        <td>
                                            <% if (booking.user) { %>
                                            <div>
                                                <div class="fw-bold"><%= booking.user.firstName %> <%= booking.user.lastName %></div>
                                                <small class="text-muted"><%= booking.user.email %></small>
                                            </div>
                                            <% } else { %>
                                            <div>
                                                <div class="fw-bold"><%= booking.guestName %></div>
                                                <small class="text-muted"><%= booking.guestEmail %></small>
                                            </div>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if (booking.tour) { %>
                                            <div>
                                                <div class="fw-bold"><%= booking.tour.title %></div>
                                                <small class="text-muted"><%= booking.tour.destination %></small>
                                            </div>
                                            <% } else { %>
                                            <span class="text-muted">Tour deleted</span>
                                            <% } %>
                                        </td>
                                        <td><%= new Date(booking.bookingDate).toLocaleDateString() %></td>
                                        <td><%= booking.numberOfPersons %></td>
                                        <td>$<%= booking.totalPrice.toFixed(2) %></td>
                                        <td>
                                            <% if (booking.status === 'confirmed') { %>
                                            <span class="badge bg-success">Confirmed</span>
                                            <% } else if (booking.status === 'cancelled') { %>
                                            <span class="badge bg-danger">Cancelled</span>
                                            <% } else if (booking.status === 'completed') { %>
                                            <span class="badge bg-info">Completed</span>
                                            <% } else { %>
                                            <span class="badge bg-warning">Pending</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if (booking.paymentStatus === 'paid') { %>
                                            <span class="badge bg-success">Paid</span>
                                            <% } else if (booking.paymentStatus === 'refunded') { %>
                                            <span class="badge bg-info">Refunded</span>
                                            <% } else { %>
                                            <span class="badge bg-warning">Pending</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <button class="btn btn-outline-primary" onclick="viewBooking('<%= booking._id %>')" title="View">
                                                    <i class="fa fa-eye"></i>
                                                </button>
                                                <button class="btn btn-outline-success" onclick="updateStatus('<%= booking._id %>', '<%= booking.status %>')" title="Update Status">
                                                    <i class="fa fa-edit"></i>
                                                </button>
                                                <button class="btn btn-outline-danger" onclick="deleteBooking('<%= booking._id %>', '<%= booking.guestName || (booking.user ? booking.user.firstName + ' ' + booking.user.lastName : '') %>')" title="Delete">
                                                    <i class="fa fa-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>

                        <!-- Pagination -->
                        <% if (typeof totalPages !== 'undefined' && totalPages > 1) { %>
                        <nav aria-label="Page navigation" class="mt-4">
                            <ul class="pagination justify-content-center">
                                <% if (typeof currentPage !== 'undefined' && currentPage > 1) { %>
                                <li class="page-item">
                                    <a class="page-link" href="?page=<%= currentPage - 1 %><%= typeof search !== 'undefined' && search ? '&search=' + search : '' %><%= typeof statusFilter !== 'undefined' && statusFilter ? '&status=' + statusFilter : '' %><%= typeof limit !== 'undefined' ? '&limit=' + limit : '' %>">Previous</a>
                                </li>
                                <% } %>

                                <% for (let i = 1; i <= totalPages; i++) { %>
                                <% if (i === 1 || i === totalPages || (i >= currentPage - 2 && i <= currentPage + 2)) { %>
                                <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                    <a class="page-link" href="?page=<%= i %><%= typeof search !== 'undefined' && search ? '&search=' + search : '' %><%= typeof statusFilter !== 'undefined' && statusFilter ? '&status=' + statusFilter : '' %><%= typeof limit !== 'undefined' ? '&limit=' + limit : '' %>"><%= i %></a>
                                </li>
                                <% } else if (i === currentPage - 3 || i === currentPage + 3) { %>
                                <li class="page-item disabled">
                                    <span class="page-link">...</span>
                                </li>
                                <% } %>
                                <% } %>

                                <% if (typeof currentPage !== 'undefined' && currentPage < totalPages) { %>
                                <li class="page-item">
                                    <a class="page-link" href="?page=<%= currentPage + 1 %><%= typeof search !== 'undefined' && search ? '&search=' + search : '' %><%= typeof statusFilter !== 'undefined' && statusFilter ? '&status=' + statusFilter : '' %><%= typeof limit !== 'undefined' ? '&limit=' + limit : '' %>">Next</a>
                                </li>
                                <% } %>
                            </ul>
                        </nav>
                        <% } %>
                        <% } else { %>
                        <div class="alert alert-info text-center">
                            <i class="fa fa-info-circle me-2"></i>No bookings found.
                        </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <!-- View Booking Modal -->
    <div class="modal fade" id="viewBookingModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Booking Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body" id="bookingDetails">
                    <!-- Booking details will be loaded here -->
                </div>
            </div>
        </div>
    </div>

    <!-- Update Status Modal -->
    <div class="modal fade" id="updateStatusModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Update Booking Status</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form id="updateStatusForm">
                    <div class="modal-body">
                        <input type="hidden" id="statusBookingId" name="bookingId">
                        <div class="mb-3">
                            <label class="form-label">Status</label>
                            <select class="form-select" id="bookingStatus" name="status" required>
                                <option value="pending">Pending</option>
                                <option value="confirmed">Confirmed</option>
                                <option value="cancelled">Cancelled</option>
                                <option value="completed">Completed</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Payment Status</label>
                            <select class="form-select" id="paymentStatus" name="paymentStatus" required>
                                <option value="pending">Pending</option>
                                <option value="paid">Paid</option>
                                <option value="refunded">Refunded</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Payment Method</label>
                            <select class="form-select" id="paymentMethod" name="paymentMethod">
                                <option value="">Select Payment Method</option>
                                <option value="cash">Cash</option>
                                <option value="card">Card</option>
                                <option value="bank_transfer">Bank Transfer</option>
                                <option value="online">Online</option>
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Update</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/static/admin/js/admin.js"></script>
    <script>
        // View Booking
        async function viewBooking(bookingId) {
            try {
                const response = await fetch(`/admin/bookings/${bookingId}`);
                const booking = await response.json();
                
                const details = `
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <strong>Booking ID:</strong> #${booking._id.toString().substring(18, 24)}
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Status:</strong> 
                            <span class="badge bg-${booking.status === 'confirmed' ? 'success' : booking.status === 'cancelled' ? 'danger' : booking.status === 'completed' ? 'info' : 'warning'}">${booking.status}</span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Customer Name:</strong> ${booking.guestName}
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Email:</strong> ${booking.guestEmail}
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Phone:</strong> ${booking.guestPhone || 'N/A'}
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Booking Date:</strong> ${new Date(booking.bookingDate).toLocaleDateString()}
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Number of Persons:</strong> ${booking.numberOfPersons}
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Total Price:</strong> $${booking.totalPrice.toFixed(2)}
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Payment Status:</strong> 
                            <span class="badge bg-${booking.paymentStatus === 'paid' ? 'success' : booking.paymentStatus === 'refunded' ? 'info' : 'warning'}">${booking.paymentStatus}</span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Payment Method:</strong> ${booking.paymentMethod || 'N/A'}
                        </div>
                        <div class="col-12 mb-3">
                            <strong>Tour:</strong> ${booking.tour ? booking.tour.title : 'Tour deleted'}
                        </div>
                        <div class="col-12 mb-3">
                            <strong>Special Request:</strong> ${booking.specialRequest || 'None'}
                        </div>
                        <div class="col-12 mb-3">
                            <strong>Notes:</strong> ${booking.notes || 'None'}
                        </div>
                        <div class="col-12 mb-3">
                            <strong>Created:</strong> ${new Date(booking.createdAt).toLocaleString()}
                        </div>
                    </div>
                `;
                
                document.getElementById('bookingDetails').innerHTML = details;
                const modal = new bootstrap.Modal(document.getElementById('viewBookingModal'));
                modal.show();
            } catch (error) {
                alert('Error loading booking: ' + error.message);
            }
        }

        // Update Status
        async function updateStatus(bookingId, currentStatus) {
            try {
                const response = await fetch(`/admin/bookings/${bookingId}`);
                const booking = await response.json();
                
                document.getElementById('statusBookingId').value = booking._id;
                document.getElementById('bookingStatus').value = booking.status;
                document.getElementById('paymentStatus').value = booking.paymentStatus;
                document.getElementById('paymentMethod').value = booking.paymentMethod || '';
                
                const modal = new bootstrap.Modal(document.getElementById('updateStatusModal'));
                modal.show();
            } catch (error) {
                alert('Error loading booking: ' + error.message);
            }
        }

        // Submit Update Status Form
        document.getElementById('updateStatusForm')?.addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const bookingId = document.getElementById('statusBookingId').value;
            const status = document.getElementById('bookingStatus').value;
            const paymentStatus = document.getElementById('paymentStatus').value;
            const paymentMethod = document.getElementById('paymentMethod').value;
            
            try {
                // Update status
                await fetch(`/admin/bookings/${bookingId}/status`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ status: status })
                });
                
                // Update payment status
                await fetch(`/admin/bookings/${bookingId}/payment-status`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ 
                        paymentStatus: paymentStatus,
                        paymentMethod: paymentMethod || undefined
                    })
                });
                
                alert('Booking status updated successfully!');
                bootstrap.Modal.getInstance(document.getElementById('updateStatusModal')).hide();
                location.reload();
            } catch (error) {
                alert('Error: ' + error.message);
            }
        });

        // Delete Booking
        async function deleteBooking(bookingId, customerName) {
            if (!confirm(`Are you sure you want to delete booking for "${customerName}"? This action cannot be undone.`)) {
                return;
            }
            
            try {
                const response = await fetch(`/admin/bookings/${bookingId}`, {
                    method: 'DELETE'
                });
                
                const result = await response.json();
                
                if (result.success) {
                    alert('Booking deleted successfully!');
                    location.reload();
                } else {
                    alert('Error: ' + (result.error || 'Failed to delete booking'));
                }
            } catch (error) {
                alert('Error: ' + error.message);
            }
        }
    </script>
</body>

</html>


