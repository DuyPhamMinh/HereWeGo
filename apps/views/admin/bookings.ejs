<!DOCTYPE html>
<html lang="en">

<head>
    <title>Bookings - Admin Dashboard</title>
    <%- include('partical/head'); %>
</head>

<body>
    <div class="wrapper">
        <%- include('partical/sidebar'); %>
        <main class="main-content">
            <%- include('partical/navbar'); %>

            <div class="container-fluid px-4 py-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center mb-4">
                    <h1 class="h3 mb-0">Bookings Management</h1>
                    <button type="button" class="btn btn-primary btn-sm">
                        <i class="fa fa-plus me-2"></i>New Booking
                    </button>
                </div>

                <div class="row mb-4">
                    <div class="col-md-3">
                        <div class="card">
                            <div class="card-body text-center">
                                <h3 class="text-primary mb-0">1,234</h3>
                                <small class="text-muted">Total Bookings</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card">
                            <div class="card-body text-center">
                                <h3 class="text-success mb-0">856</h3>
                                <small class="text-muted">Confirmed</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card">
                            <div class="card-body text-center">
                                <h3 class="text-warning mb-0">234</h3>
                                <small class="text-muted">Pending</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card">
                            <div class="card-body text-center">
                                <h3 class="text-danger mb-0">144</h3>
                                <small class="text-muted">Cancelled</small>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h6 class="mb-0">All Bookings</h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Booking ID</th>
                                        <th>Customer</th>
                                        <th>Package</th>
                                        <th>Travel Date</th>
                                        <th>Guests</th>
                                        <th>Total</th>
                                        <th>Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>#BK001</td>
                                        <td>John Doe</td>
                                        <td>Venice - Italy</td>
                                        <td>2024-02-15</td>
                                        <td>2</td>
                                        <td>$698.00</td>
                                        <td><span class="badge bg-success">Confirmed</span></td>
                                        <td>
                                            <button class="btn btn-sm btn-outline-primary">View</button>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>#BK002</td>
                                        <td>Jane Smith</td>
                                        <td>Discover Japan</td>
                                        <td>2024-02-20</td>
                                        <td>4</td>
                                        <td>$2,196.00</td>
                                        <td><span class="badge bg-warning">Pending</span></td>
                                        <td>
                                            <button class="btn btn-sm btn-outline-primary">View</button>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>#BK003</td>
                                        <td>Mike Johnson</td>
                                        <td>Thailand Trip</td>
                                        <td>2024-03-01</td>
                                        <td>2</td>
                                        <td>$1,298.00</td>
                                        <td><span class="badge bg-success">Confirmed</span></td>
                                        <td>
                                            <button class="btn btn-sm btn-outline-primary">View</button>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/static/admin/js/admin.js"></script>
</body>

</html>


