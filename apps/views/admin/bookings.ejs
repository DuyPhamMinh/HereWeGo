<!DOCTYPE html>
<html lang="en">

<head>
    <title>Bookings - Admin Dashboard</title>
    <%- include('partical/head'); %>
</head>

<body>
    <div class="wrapper">
        <%- include('partical/sidebar'); %>
        <main class="main-content">
            <%- include('partical/navbar'); %>

            <div class="container-fluid px-4 py-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center mb-4">
                    <h1 class="h3 mb-0">Quản lý Hóa đơn</h1>
                    <p class="text-muted mb-0">Chế độ xem chỉ - Không thể chỉnh sửa hoặc xóa</p>
                </div>

                <div class="row mb-4">
                    <div class="col-md-2">
                        <div class="card">
                            <div class="card-body text-center">
                                <h3 class="text-primary mb-0"><%= typeof totalBookingsCount !== 'undefined' ? totalBookingsCount : 0 %></h3>
                                <small class="text-muted">Tổng hóa đơn</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="card">
                            <div class="card-body text-center">
                                <h3 class="text-success mb-0"><%= typeof confirmedCount !== 'undefined' ? confirmedCount : 0 %></h3>
                                <small class="text-muted">Đã xác nhận</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="card">
                            <div class="card-body text-center">
                                <h3 class="text-warning mb-0"><%= typeof pendingCount !== 'undefined' ? pendingCount : 0 %></h3>
                                <small class="text-muted">Chờ xử lý</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="card">
                            <div class="card-body text-center">
                                <h3 class="text-success mb-0"><%= typeof paidCount !== 'undefined' ? paidCount : 0 %></h3>
                                <small class="text-muted">Đã thanh toán</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="card">
                            <div class="card-body text-center">
                                <h3 class="text-warning mb-0"><%= typeof paymentPendingCount !== 'undefined' ? paymentPendingCount : 0 %></h3>
                                <small class="text-muted">Chờ thanh toán</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="card">
                            <div class="card-body text-center">
                                <h3 class="text-danger mb-0"><%= typeof cancelledCount !== 'undefined' ? cancelledCount : 0 %></h3>
                                <small class="text-muted">Đã hủy</small>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Search and Filter -->
                <div class="card mb-4">
                    <div class="card-body">
                        <form method="GET" action="/admin/bookings" class="row g-3">
                            <div class="col-md-4">
                                <input type="text" class="form-control" name="search" placeholder="Search by name, email, phone..." value="<%= typeof search !== 'undefined' ? search : '' %>">
                            </div>
                            <div class="col-md-2">
                                <select class="form-select" name="status">
                                    <option value="">Tất cả trạng thái</option>
                                    <option value="pending" <%= typeof statusFilter !== 'undefined' && statusFilter === 'pending' ? 'selected' : '' %>>Chờ xử lý</option>
                                    <option value="confirmed" <%= typeof statusFilter !== 'undefined' && statusFilter === 'confirmed' ? 'selected' : '' %>>Đã xác nhận</option>
                                    <option value="cancelled" <%= typeof statusFilter !== 'undefined' && statusFilter === 'cancelled' ? 'selected' : '' %>>Đã hủy</option>
                                    <option value="completed" <%= typeof statusFilter !== 'undefined' && statusFilter === 'completed' ? 'selected' : '' %>>Hoàn thành</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <select class="form-select" name="paymentStatus">
                                    <option value="">Tất cả thanh toán</option>
                                    <option value="pending" <%= typeof paymentStatusFilter !== 'undefined' && paymentStatusFilter === 'pending' ? 'selected' : '' %>>Chờ thanh toán</option>
                                    <option value="paid" <%= typeof paymentStatusFilter !== 'undefined' && paymentStatusFilter === 'paid' ? 'selected' : '' %>>Đã thanh toán</option>
                                    <option value="refunded" <%= typeof paymentStatusFilter !== 'undefined' && paymentStatusFilter === 'refunded' ? 'selected' : '' %>>Đã hoàn tiền</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <select class="form-select" name="limit">
                                    <option value="10" <%= typeof limit !== 'undefined' && limit == 10 ? 'selected' : '' %>>10 / trang</option>
                                    <option value="25" <%= typeof limit !== 'undefined' && limit == 25 ? 'selected' : '' %>>25 / trang</option>
                                    <option value="50" <%= typeof limit !== 'undefined' && limit == 50 ? 'selected' : '' %>>50 / trang</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <button type="submit" class="btn btn-primary w-100">
                                    <i class="fa fa-search me-2"></i>Tìm kiếm
                                </button>
                            </div>
                            <div class="col-md-2">
                                <a href="/admin/bookings" class="btn btn-outline-secondary w-100">
                                    <i class="fa fa-refresh me-2"></i>Làm mới
                                </a>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h6 class="mb-0">Danh sách Hóa đơn</h6>
                    </div>
                    <div class="card-body">
                        <% if (typeof error !== 'undefined' && error) { %>
                        <div class="alert alert-danger">
                            <i class="fa fa-exclamation-circle me-2"></i><%= error %>
                        </div>
                        <% } %>

                        <% if (typeof bookings !== 'undefined' && bookings.length > 0) { %>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Mã HĐ</th>
                                        <th>Khách hàng</th>
                                        <th>Tour</th>
                                        <th>Ngày đặt</th>
                                        <th>Số người</th>
                                        <th>Tổng tiền</th>
                                        <th>Trạng thái</th>
                                        <th>Thanh toán</th>
                                        <th>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% bookings.forEach(function(booking) { %>
                                    <tr>
                                        <td>#<%= booking._id.toString().substring(18, 24) %></td>
                                        <td>
                                            <% if (booking.user) { %>
                                            <div>
                                                <div class="fw-bold"><%= booking.user.firstName %> <%= booking.user.lastName %></div>
                                                <small class="text-muted"><%= booking.user.email %></small>
                                            </div>
                                            <% } else { %>
                                            <div>
                                                <div class="fw-bold"><%= booking.guestName %></div>
                                                <small class="text-muted"><%= booking.guestEmail %></small>
                                            </div>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if (booking.tour) { %>
                                            <div>
                                                <div class="fw-bold"><%= booking.tour.title %></div>
                                                <small class="text-muted"><%= booking.tour.destination %></small>
                                            </div>
                                            <% } else { %>
                                            <span class="text-muted">Tour deleted</span>
                                            <% } %>
                                        </td>
                                        <td><%= new Date(booking.bookingDate).toLocaleDateString() %></td>
                                        <td><%= booking.numberOfPersons %></td>
                                        <td>$<%= booking.totalPrice.toFixed(2) %></td>
                                        <td>
                                            <% if (booking.status === 'confirmed') { %>
                                            <span class="badge bg-success">Confirmed</span>
                                            <% } else if (booking.status === 'cancelled') { %>
                                            <span class="badge bg-danger">Cancelled</span>
                                            <% } else if (booking.status === 'completed') { %>
                                            <span class="badge bg-info">Completed</span>
                                            <% } else { %>
                                            <span class="badge bg-warning">Pending</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if (booking.paymentStatus === 'paid') { %>
                                            <span class="badge bg-success">Đã thanh toán</span>
                                            <% if (booking.paymentMethod === 'vnpay') { %>
                                            <br><small class="text-muted">VNPay</small>
                                            <% } %>
                                            <% } else if (booking.paymentStatus === 'refunded') { %>
                                            <span class="badge bg-info">Đã hoàn tiền</span>
                                            <% } else { %>
                                            <span class="badge bg-warning">Chờ thanh toán</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <button class="btn btn-outline-primary btn-sm" onclick="viewBooking('<%= booking._id %>')" title="Xem chi tiết">
                                                <i class="fa fa-eye me-1"></i>Xem
                                            </button>
                                        </td>
                                    </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>

                        <!-- Pagination -->
                        <% if (typeof totalPages !== 'undefined' && totalPages > 1) { %>
                        <nav aria-label="Page navigation" class="mt-4">
                            <ul class="pagination justify-content-center">
                                <% if (typeof currentPage !== 'undefined' && currentPage > 1) { %>
                                <li class="page-item">
                                    <a class="page-link" href="?page=<%= currentPage - 1 %><%= typeof search !== 'undefined' && search ? '&search=' + encodeURIComponent(search) : '' %><%= typeof statusFilter !== 'undefined' && statusFilter ? '&status=' + statusFilter : '' %><%= typeof paymentStatusFilter !== 'undefined' && paymentStatusFilter ? '&paymentStatus=' + paymentStatusFilter : '' %><%= typeof limit !== 'undefined' ? '&limit=' + limit : '' %>">Trước</a>
                                </li>
                                <% } %>

                                <% for (let i = 1; i <= totalPages; i++) { %>
                                <% if (i === 1 || i === totalPages || (i >= currentPage - 2 && i <= currentPage + 2)) { %>
                                <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                    <a class="page-link" href="?page=<%= i %><%= typeof search !== 'undefined' && search ? '&search=' + encodeURIComponent(search) : '' %><%= typeof statusFilter !== 'undefined' && statusFilter ? '&status=' + statusFilter : '' %><%= typeof paymentStatusFilter !== 'undefined' && paymentStatusFilter ? '&paymentStatus=' + paymentStatusFilter : '' %><%= typeof limit !== 'undefined' ? '&limit=' + limit : '' %>"><%= i %></a>
                                </li>
                                <% } else if (i === currentPage - 3 || i === currentPage + 3) { %>
                                <li class="page-item disabled">
                                    <span class="page-link">...</span>
                                </li>
                                <% } %>
                                <% } %>

                                <% if (typeof currentPage !== 'undefined' && currentPage < totalPages) { %>
                                <li class="page-item">
                                    <a class="page-link" href="?page=<%= currentPage + 1 %><%= typeof search !== 'undefined' && search ? '&search=' + encodeURIComponent(search) : '' %><%= typeof statusFilter !== 'undefined' && statusFilter ? '&status=' + statusFilter : '' %><%= typeof paymentStatusFilter !== 'undefined' && paymentStatusFilter ? '&paymentStatus=' + paymentStatusFilter : '' %><%= typeof limit !== 'undefined' ? '&limit=' + limit : '' %>">Sau</a>
                                </li>
                                <% } %>
                            </ul>
                        </nav>
                        <% } %>
                        <% } else { %>
                        <div class="alert alert-info text-center">
                            <i class="fa fa-info-circle me-2"></i>Không tìm thấy hóa đơn nào.
                        </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <!-- View Booking Modal -->
    <div class="modal fade" id="viewBookingModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Chi tiết Hóa đơn</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body" id="bookingDetails">
                    <!-- Booking details will be loaded here -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/static/admin/js/admin.js"></script>
    <script>
        // View Booking
        async function viewBooking(bookingId) {
            try {
                const response = await fetch(`/admin/bookings/${bookingId}`);
                const booking = await response.json();
                
                // Format payment method
                let paymentMethodText = booking.paymentMethod || 'Chưa xác định';
                if (paymentMethodText === 'vnpay') {
                    paymentMethodText = 'VNPay';
                } else if (paymentMethodText === 'cash') {
                    paymentMethodText = 'Tiền mặt';
                } else if (paymentMethodText === 'card') {
                    paymentMethodText = 'Thẻ';
                } else if (paymentMethodText === 'bank_transfer') {
                    paymentMethodText = 'Chuyển khoản';
                } else if (paymentMethodText === 'online') {
                    paymentMethodText = 'Online';
                }
                
                // Format status
                let statusText = booking.status;
                if (statusText === 'pending') statusText = 'Chờ xử lý';
                else if (statusText === 'confirmed') statusText = 'Đã xác nhận';
                else if (statusText === 'cancelled') statusText = 'Đã hủy';
                else if (statusText === 'completed') statusText = 'Hoàn thành';
                
                // Format payment status
                let paymentStatusText = booking.paymentStatus;
                if (paymentStatusText === 'pending') paymentStatusText = 'Chờ thanh toán';
                else if (paymentStatusText === 'paid') paymentStatusText = 'Đã thanh toán';
                else if (paymentStatusText === 'refunded') paymentStatusText = 'Đã hoàn tiền';
                
                const details = `
                    <div class="row">
                        <div class="col-12 mb-3">
                            <h6 class="text-primary">Thông tin Hóa đơn</h6>
                            <hr>
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Mã Hóa đơn:</strong> #${booking._id.toString().substring(18, 24)}
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Trạng thái:</strong> 
                            <span class="badge bg-${booking.status === 'confirmed' ? 'success' : booking.status === 'cancelled' ? 'danger' : booking.status === 'completed' ? 'info' : 'warning'}">${statusText}</span>
                        </div>
                        <div class="col-12 mb-3">
                            <h6 class="text-primary">Thông tin Khách hàng</h6>
                            <hr>
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Tên khách hàng:</strong> ${booking.guestName || (booking.user ? booking.user.firstName + ' ' + booking.user.lastName : 'N/A')}
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Email:</strong> ${booking.guestEmail || (booking.user ? booking.user.email : 'N/A')}
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Số điện thoại:</strong> ${booking.guestPhone || (booking.user ? (booking.user.phone || 'N/A') : 'N/A')}
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Ngày đặt tour:</strong> ${new Date(booking.bookingDate).toLocaleDateString('vi-VN')}
                        </div>
                        <div class="col-12 mb-3">
                            <h6 class="text-primary">Thông tin Tour</h6>
                            <hr>
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Tour:</strong> ${booking.tour ? booking.tour.title : 'Tour đã bị xóa'}
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Điểm đến:</strong> ${booking.tour ? booking.tour.destination : 'N/A'}
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Số người:</strong> ${booking.numberOfPersons} người
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Tổng tiền:</strong> 
                            <span class="text-primary fw-bold">$${booking.totalPrice.toFixed(2)}</span>
                            ${booking.vnpayAmount ? `<br><small class="text-muted">(~${booking.vnpayAmount.toLocaleString('vi-VN')} VND)</small>` : ''}
                        </div>
                        <div class="col-12 mb-3">
                            <h6 class="text-primary">Thông tin Thanh toán</h6>
                            <hr>
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Trạng thái thanh toán:</strong> 
                            <span class="badge bg-${booking.paymentStatus === 'paid' ? 'success' : booking.paymentStatus === 'refunded' ? 'info' : 'warning'}">${paymentStatusText}</span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Phương thức thanh toán:</strong> ${paymentMethodText}
                        </div>
                        ${booking.paymentMethod === 'vnpay' && booking.vnpayTransactionNo ? `
                        <div class="col-md-6 mb-3">
                            <strong>Mã giao dịch VNPay:</strong> ${booking.vnpayTransactionNo}
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Mã tham chiếu:</strong> ${booking.vnpayTxnRef || 'N/A'}
                        </div>
                        ${booking.vnpayResponseCode ? `
                        <div class="col-md-6 mb-3">
                            <strong>Mã phản hồi:</strong> ${booking.vnpayResponseCode}
                        </div>
                        ` : ''}
                        ` : ''}
                        ${booking.specialRequest ? `
                        <div class="col-12 mb-3">
                            <h6 class="text-primary">Yêu cầu đặc biệt</h6>
                            <hr>
                            <p>${booking.specialRequest}</p>
                        </div>
                        ` : ''}
                        ${booking.notes ? `
                        <div class="col-12 mb-3">
                            <h6 class="text-primary">Ghi chú</h6>
                            <hr>
                            <p>${booking.notes}</p>
                        </div>
                        ` : ''}
                        <div class="col-12 mb-3">
                            <small class="text-muted">
                                <strong>Ngày tạo:</strong> ${new Date(booking.createdAt).toLocaleString('vi-VN')}
                                ${booking.updatedAt && booking.updatedAt.toString() !== booking.createdAt.toString() ? 
                                    `<br><strong>Cập nhật lần cuối:</strong> ${new Date(booking.updatedAt).toLocaleString('vi-VN')}` : ''}
                            </small>
                        </div>
                    </div>
                `;
                
                document.getElementById('bookingDetails').innerHTML = details;
                const modal = new bootstrap.Modal(document.getElementById('viewBookingModal'));
                modal.show();
            } catch (error) {
                alert('Lỗi khi tải thông tin hóa đơn: ' + error.message);
            }
        }
    </script>
</body>

</html>


