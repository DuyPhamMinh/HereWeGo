<!DOCTYPE html>
<html lang="en">

<head>
    <title>Admin Dashboard - HereWeGo</title>
    <%- include('partical/head'); %>
</head>

<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <%- include('partical/sidebar'); %>

        <!-- Main Content -->
        <main class="main-content">
            <!-- Navbar -->
            <%- include('partical/navbar'); %>

            <!-- Page Content -->
            <div class="container-fluid px-4 py-4">
                <!-- Page Header -->
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center mb-4">
                    <h1 class="h3 mb-0">Dashboard Overview</h1>
                    <div class="btn-toolbar">
                        <button type="button" class="btn btn-primary btn-sm me-2">
                            <i class="fa fa-plus me-2"></i>New Task
                        </button>
                        <div class="btn-group btn-group-sm">
                            <button type="button" class="btn btn-outline-primary">Share</button>
                            <button type="button" class="btn btn-outline-primary">Export</button>
                        </div>
                    </div>
                </div>

                <!-- Stats Cards -->
                <div class="row mb-4">
                    <div class="col-12 col-md-6 col-xl-3 mb-4">
                        <div class="card widget-card primary">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="text-muted mb-2">Total Revenue</h6>
                                        <h3 class="mb-0">$43,594</h3>
                                        <small class="text-success">
                                            <i class="fa fa-arrow-up me-1"></i>28.4%
                                        </small>
                                    </div>
                                    <div class="text-primary" style="font-size: 2.5rem;">
                                        <i class="fa fa-dollar-sign"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-6 col-xl-3 mb-4">
                        <div class="card widget-card success">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="text-muted mb-2">Total Users</h6>
                                        <h3 class="mb-0"><%= typeof totalUsers !== 'undefined' ? totalUsers : 0 %></h3>
                                        <small class="text-success">
                                            <i class="fa fa-users me-1"></i><%= typeof totalRegularUsers !== 'undefined' ? totalRegularUsers : 0 %> regular
                                        </small>
                                    </div>
                                    <div class="text-success" style="font-size: 2.5rem;">
                                        <i class="fa fa-users"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-6 col-xl-3 mb-4">
                        <div class="card widget-card warning">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="text-muted mb-2">Bookings</h6>
                                        <h3 class="mb-0">1,234</h3>
                                        <small class="text-danger">
                                            <i class="fa fa-arrow-down me-1"></i>5.2%
                                        </small>
                                    </div>
                                    <div class="text-warning" style="font-size: 2.5rem;">
                                        <i class="fa fa-calendar-check"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-6 col-xl-3 mb-4">
                        <div class="card widget-card info">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="text-muted mb-2">New Users (30 days)</h6>
                                        <h3 class="mb-0"><%= typeof newUsersThisMonth !== 'undefined' ? newUsersThisMonth : 0 %></h3>
                                        <small class="text-info">
                                            <i class="fa fa-user-plus me-1"></i>This month
                                        </small>
                                    </div>
                                    <div class="text-info" style="font-size: 2.5rem;">
                                        <i class="fa fa-user-plus"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Charts and Tables Row -->
                <div class="row">
                    <!-- Sales Chart -->
                    <div class="col-12 col-xl-8 mb-4">
                        <div class="card">
                            <div class="card-header">
                                <h6 class="mb-0">Sales Overview</h6>
                            </div>
                            <div class="card-body">
                                <div class="chart-container">
                                    <canvas id="salesChart"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Traffic Share -->
                    <div class="col-12 col-xl-4 mb-4">
                        <div class="card">
                            <div class="card-header">
                                <h6 class="mb-0">Traffic Share</h6>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <div class="d-flex justify-content-between mb-2">
                                        <span>Desktop</span>
                                        <span class="fw-bold">60%</span>
                                    </div>
                                    <div class="progress" style="height: 8px;">
                                        <div class="progress-bar bg-secondary" role="progressbar" style="width: 60%"></div>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <div class="d-flex justify-content-between mb-2">
                                        <span>Mobile</span>
                                        <span class="fw-bold">30%</span>
                                    </div>
                                    <div class="progress" style="height: 8px;">
                                        <div class="progress-bar bg-primary" role="progressbar" style="width: 30%"></div>
                                    </div>
                                </div>
                                <div>
                                    <div class="d-flex justify-content-between mb-2">
                                        <span>Tablet</span>
                                        <span class="fw-bold">10%</span>
                                    </div>
                                    <div class="progress" style="height: 8px;">
                                        <div class="progress-bar bg-info" role="progressbar" style="width: 10%"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Recent Bookings Table -->
                <div class="row">
                    <div class="col-12 mb-4">
                        <div class="card">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <h6 class="mb-0">Recent Bookings</h6>
                                <a href="/admin/bookings" class="btn btn-sm btn-primary">View All</a>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>Booking ID</th>
                                                <th>Customer</th>
                                                <th>Package</th>
                                                <th>Date</th>
                                                <th>Status</th>
                                                <th>Amount</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>#BK001</td>
                                                <td>John Doe</td>
                                                <td>Venice - Italy</td>
                                                <td>2024-01-15</td>
                                                <td><span class="badge bg-success">Confirmed</span></td>
                                                <td>$349.00</td>
                                                <td>
                                                    <button class="btn btn-sm btn-outline-primary">View</button>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>#BK002</td>
                                                <td>Jane Smith</td>
                                                <td>Discover Japan</td>
                                                <td>2024-01-16</td>
                                                <td><span class="badge bg-warning">Pending</span></td>
                                                <td>$549.00</td>
                                                <td>
                                                    <button class="btn btn-sm btn-outline-primary">View</button>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>#BK003</td>
                                                <td>Mike Johnson</td>
                                                <td>Thailand Trip</td>
                                                <td>2024-01-17</td>
                                                <td><span class="badge bg-success">Confirmed</span></td>
                                                <td>$649.00</td>
                                                <td>
                                                    <button class="btn btn-sm btn-outline-primary">View</button>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>#BK004</td>
                                                <td>Sarah Williams</td>
                                                <td>The New California</td>
                                                <td>2024-01-18</td>
                                                <td><span class="badge bg-danger">Cancelled</span></td>
                                                <td>$449.00</td>
                                                <td>
                                                    <button class="btn btn-sm btn-outline-primary">View</button>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Chart.js for charts -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.9.1/dist/chart.min.js"></script>
    
    <!-- Admin JS -->
    <script src="/static/admin/js/admin.js"></script>
</body>

</html>


