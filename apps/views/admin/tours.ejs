<!DOCTYPE html>
<html lang="en">

<head>
    <title>Tours - Admin Dashboard</title>
    <%- include('partical/head'); %>
</head>

<body>
    <div class="wrapper">
        <%- include('partical/sidebar'); %>
        <main class="main-content">
            <%- include('partical/navbar'); %>

            <div class="container-fluid px-4 py-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center mb-4">
                    <h1 class="h3 mb-0">Tours Management</h1>
                    <div>
                        <span class="badge bg-primary me-2">Total: <%= typeof totalTours !== 'undefined' ? totalTours : 0 %></span>
                        <button type="button" class="btn btn-primary btn-sm" onclick="showAddTourModal()">
                            <i class="fa fa-plus me-2"></i>Add Tour
                        </button>
                    </div>
                </div>

                <!-- Search and Filter -->
                <div class="card mb-4">
                    <div class="card-body">
                        <form method="GET" action="/admin/tours" class="row g-3">
                            <div class="col-md-4">
                                <input type="text" class="form-control" name="search" placeholder="Search by title, destination..." value="<%= typeof search !== 'undefined' ? search : '' %>">
                            </div>
                            <div class="col-md-3">
                                <select class="form-select" name="category">
                                    <option value="">All Categories</option>
                                    <option value="adventure" <%= typeof categoryFilter !== 'undefined' && categoryFilter === 'adventure' ? 'selected' : '' %>>Adventure</option>
                                    <option value="beach" <%= typeof categoryFilter !== 'undefined' && categoryFilter === 'beach' ? 'selected' : '' %>>Beach</option>
                                    <option value="cultural" <%= typeof categoryFilter !== 'undefined' && categoryFilter === 'cultural' ? 'selected' : '' %>>Cultural</option>
                                    <option value="mountain" <%= typeof categoryFilter !== 'undefined' && categoryFilter === 'mountain' ? 'selected' : '' %>>Mountain</option>
                                    <option value="city" <%= typeof categoryFilter !== 'undefined' && categoryFilter === 'city' ? 'selected' : '' %>>City</option>
                                    <option value="nature" <%= typeof categoryFilter !== 'undefined' && categoryFilter === 'nature' ? 'selected' : '' %>>Nature</option>
                                    <option value="other" <%= typeof categoryFilter !== 'undefined' && categoryFilter === 'other' ? 'selected' : '' %>>Other</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <select class="form-select" name="status">
                                    <option value="">All Status</option>
                                    <option value="active" <%= typeof statusFilter !== 'undefined' && statusFilter === 'active' ? 'selected' : '' %>>Active</option>
                                    <option value="inactive" <%= typeof statusFilter !== 'undefined' && statusFilter === 'inactive' ? 'selected' : '' %>>Inactive</option>
                                </select>
                            </div>
                            <div class="col-md-1">
                                <select class="form-select" name="limit">
                                    <option value="10" <%= typeof limit !== 'undefined' && limit == 10 ? 'selected' : '' %>>10</option>
                                    <option value="25" <%= typeof limit !== 'undefined' && limit == 25 ? 'selected' : '' %>>25</option>
                                    <option value="50" <%= typeof limit !== 'undefined' && limit == 50 ? 'selected' : '' %>>50</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <button type="submit" class="btn btn-primary me-2">
                                    <i class="fa fa-search me-2"></i>Search
                                </button>
                                <a href="/admin/tours" class="btn btn-outline-secondary">
                                    <i class="fa fa-refresh me-2"></i>Reset
                                </a>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Tours Table -->
                <div class="card">
                    <div class="card-header">
                        <h6 class="mb-0">All Tours</h6>
                    </div>
                    <div class="card-body">
                        <% if (typeof error !== 'undefined' && error) { %>
                        <div class="alert alert-danger">
                            <i class="fa fa-exclamation-circle me-2"></i><%= error %>
                        </div>
                        <% } %>

                        <% if (typeof tours !== 'undefined' && tours.length > 0) { %>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Image</th>
                                        <th>Title</th>
                                        <th>Destination</th>
                                        <th>Duration</th>
                                        <th>Price</th>
                                        <th>Category</th>
                                        <th>Status</th>
                                        <th>Featured</th>
                                        <th>Created</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% tours.forEach(function(tour, index) { %>
                                    <tr>
                                        <td>
                                            <img src="<%= tour.image || '/static/img/packages-1.jpg' %>" alt="<%= tour.title %>" 
                                                 class="img-thumbnail" style="width: 60px; height: 60px; object-fit: cover;">
                                        </td>
                                        <td>
                                            <div class="fw-bold"><%= tour.title %></div>
                                            <small class="text-muted"><%= tour.shortDescription ? (tour.shortDescription.length > 50 ? tour.shortDescription.substring(0, 50) + '...' : tour.shortDescription) : '' %></small>
                                        </td>
                                        <td><%= tour.destination %></td>
                                        <td><%= tour.duration %> <%= tour.durationUnit || 'days' %></td>
                                        <td>
                                            <% if (tour.discountPrice) { %>
                                            <span class="text-decoration-line-through text-muted">$<%= tour.price.toFixed(2) %></span>
                                            <span class="text-danger fw-bold">$<%= tour.discountPrice.toFixed(2) %></span>
                                            <% } else { %>
                                            <span class="fw-bold">$<%= tour.price.toFixed(2) %></span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <span class="badge bg-info"><%= tour.category || 'other' %></span>
                                        </td>
                                        <td>
                                            <% if (typeof tour.isActive !== 'undefined' && tour.isActive === false) { %>
                                            <span class="badge bg-danger">Inactive</span>
                                            <% } else { %>
                                            <span class="badge bg-success">Active</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if (tour.isFeatured) { %>
                                            <span class="badge bg-warning">Featured</span>
                                            <% } else { %>
                                            <span class="badge bg-secondary">Normal</span>
                                            <% } %>
                                        </td>
                                        <td><%= new Date(tour.createdAt).toLocaleDateString() %></td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <button class="btn btn-outline-primary" onclick="editTour('<%= tour._id %>')" title="Edit">
                                                    <i class="fa fa-edit"></i>
                                                </button>
                                                <button class="btn btn-outline-<%= typeof tour.isActive !== 'undefined' && tour.isActive === false ? 'success' : 'warning' %>" 
                                                        onclick="toggleStatus('<%= tour._id %>', '<%= typeof tour.isActive !== 'undefined' ? tour.isActive : true %>', '<%= tour.title %>')" 
                                                        title="<%= typeof tour.isActive !== 'undefined' && tour.isActive === false ? 'Activate' : 'Deactivate' %>">
                                                    <i class="fa fa-<%= typeof tour.isActive !== 'undefined' && tour.isActive === false ? 'check' : 'times' %>"></i>
                                                </button>
                                                <button class="btn btn-outline-<%= tour.isFeatured ? 'secondary' : 'warning' %>" 
                                                        onclick="toggleFeatured('<%= tour._id %>', '<%= tour.isFeatured %>', '<%= tour.title %>')" 
                                                        title="<%= tour.isFeatured ? 'Unfeature' : 'Feature' %>">
                                                    <i class="fa fa-star"></i>
                                                </button>
                                                <button class="btn btn-outline-danger" onclick="deleteTour('<%= tour._id %>', '<%= tour.title %>')" title="Delete">
                                                    <i class="fa fa-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>

                        <!-- Pagination -->
                        <% if (typeof totalPages !== 'undefined' && totalPages > 1) { %>
                        <nav aria-label="Page navigation" class="mt-4">
                            <ul class="pagination justify-content-center">
                                <% if (typeof currentPage !== 'undefined' && currentPage > 1) { %>
                                <li class="page-item">
                                    <a class="page-link" href="?page=<%= currentPage - 1 %><%= typeof search !== 'undefined' && search ? '&search=' + search : '' %><%= typeof categoryFilter !== 'undefined' && categoryFilter ? '&category=' + categoryFilter : '' %><%= typeof statusFilter !== 'undefined' && statusFilter ? '&status=' + statusFilter : '' %><%= typeof limit !== 'undefined' ? '&limit=' + limit : '' %>">Previous</a>
                                </li>
                                <% } %>

                                <% for (let i = 1; i <= totalPages; i++) { %>
                                <% if (i === 1 || i === totalPages || (i >= currentPage - 2 && i <= currentPage + 2)) { %>
                                <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                    <a class="page-link" href="?page=<%= i %><%= typeof search !== 'undefined' && search ? '&search=' + search : '' %><%= typeof categoryFilter !== 'undefined' && categoryFilter ? '&category=' + categoryFilter : '' %><%= typeof statusFilter !== 'undefined' && statusFilter ? '&status=' + statusFilter : '' %><%= typeof limit !== 'undefined' ? '&limit=' + limit : '' %>"><%= i %></a>
                                </li>
                                <% } else if (i === currentPage - 3 || i === currentPage + 3) { %>
                                <li class="page-item disabled">
                                    <span class="page-link">...</span>
                                </li>
                                <% } %>
                                <% } %>

                                <% if (typeof currentPage !== 'undefined' && currentPage < totalPages) { %>
                                <li class="page-item">
                                    <a class="page-link" href="?page=<%= currentPage + 1 %><%= typeof search !== 'undefined' && search ? '&search=' + search : '' %><%= typeof categoryFilter !== 'undefined' && categoryFilter ? '&category=' + categoryFilter : '' %><%= typeof statusFilter !== 'undefined' && statusFilter ? '&status=' + statusFilter : '' %><%= typeof limit !== 'undefined' ? '&limit=' + limit : '' %>">Next</a>
                                </li>
                                <% } %>
                            </ul>
                        </nav>
                        <% } %>
                        <% } else { %>
                        <div class="alert alert-info text-center">
                            <i class="fa fa-info-circle me-2"></i>No tours found.
                        </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <!-- Add Tour Modal -->
    <div class="modal fade" id="addTourModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add New Tour</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form id="addTourForm">
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Title <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="addTitle" name="title" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Destination <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="addDestination" name="destination" required>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Description <span class="text-danger">*</span></label>
                            <textarea class="form-control" id="addDescription" name="description" rows="3" required></textarea>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Short Description</label>
                            <textarea class="form-control" id="addShortDescription" name="shortDescription" rows="2"></textarea>
                            <small class="form-text text-muted">Brief description (optional, will use first 150 chars of description if empty)</small>
                        </div>
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Duration <span class="text-danger">*</span></label>
                                <input type="number" class="form-control" id="addDuration" name="duration" min="1" required>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Duration Unit</label>
                                <select class="form-select" id="addDurationUnit" name="durationUnit">
                                    <option value="days" selected>Days</option>
                                    <option value="hours">Hours</option>
                                </select>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Max Persons</label>
                                <input type="number" class="form-control" id="addMaxPersons" name="maxPersons" min="1" value="2">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Price ($) <span class="text-danger">*</span></label>
                                <input type="number" class="form-control" id="addPrice" name="price" step="0.01" min="0" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Discount Price ($)</label>
                                <input type="number" class="form-control" id="addDiscountPrice" name="discountPrice" step="0.01" min="0">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Image URL</label>
                                <input type="text" class="form-control" id="addImage" name="image" placeholder="/static/img/packages-1.jpg">
                                <small class="form-text text-muted">Default: /static/img/packages-1.jpg</small>
                            </div>
                            <div class="col-md-3 mb-3">
                                <label class="form-label">Category</label>
                                <select class="form-select" id="addCategory" name="category">
                                    <option value="other">Other</option>
                                    <option value="adventure">Adventure</option>
                                    <option value="beach">Beach</option>
                                    <option value="cultural">Cultural</option>
                                    <option value="mountain">Mountain</option>
                                    <option value="city">City</option>
                                    <option value="nature">Nature</option>
                                </select>
                            </div>
                            <div class="col-md-3 mb-3">
                                <label class="form-label">Rating</label>
                                <input type="number" class="form-control" id="addRating" name="rating" step="0.1" min="0" max="5" value="5">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="addIsActive" name="isActive" checked>
                                    <label class="form-check-label" for="addIsActive">
                                        Active
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="addIsFeatured" name="isFeatured">
                                    <label class="form-check-label" for="addIsFeatured">
                                        Featured
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Highlights (comma-separated)</label>
                            <input type="text" class="form-control" id="addHighlights" name="highlights" placeholder="Scenic views, Local cuisine, Guided tour">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Includes (comma-separated)</label>
                            <input type="text" class="form-control" id="addIncludes" name="includes" placeholder="Hotel, Meals, Transportation">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Excludes (comma-separated)</label>
                            <input type="text" class="form-control" id="addExcludes" name="excludes" placeholder="Flights, Insurance, Tips">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Create Tour</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Edit Tour Modal -->
    <div class="modal fade" id="editTourModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Edit Tour</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form id="editTourForm">
                    <div class="modal-body">
                        <input type="hidden" id="editTourId" name="tourId">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Title <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="editTitle" name="title" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Destination <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="editDestination" name="destination" required>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Description <span class="text-danger">*</span></label>
                            <textarea class="form-control" id="editDescription" name="description" rows="3" required></textarea>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Short Description</label>
                            <textarea class="form-control" id="editShortDescription" name="shortDescription" rows="2"></textarea>
                        </div>
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Duration <span class="text-danger">*</span></label>
                                <input type="number" class="form-control" id="editDuration" name="duration" min="1" required>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Duration Unit</label>
                                <select class="form-select" id="editDurationUnit" name="durationUnit">
                                    <option value="days">Days</option>
                                    <option value="hours">Hours</option>
                                </select>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Max Persons</label>
                                <input type="number" class="form-control" id="editMaxPersons" name="maxPersons" min="1">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Price ($) <span class="text-danger">*</span></label>
                                <input type="number" class="form-control" id="editPrice" name="price" step="0.01" min="0" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Discount Price ($)</label>
                                <input type="number" class="form-control" id="editDiscountPrice" name="discountPrice" step="0.01" min="0">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Image URL</label>
                                <input type="text" class="form-control" id="editImage" name="image">
                            </div>
                            <div class="col-md-3 mb-3">
                                <label class="form-label">Category</label>
                                <select class="form-select" id="editCategory" name="category">
                                    <option value="other">Other</option>
                                    <option value="adventure">Adventure</option>
                                    <option value="beach">Beach</option>
                                    <option value="cultural">Cultural</option>
                                    <option value="mountain">Mountain</option>
                                    <option value="city">City</option>
                                    <option value="nature">Nature</option>
                                </select>
                            </div>
                            <div class="col-md-3 mb-3">
                                <label class="form-label">Rating</label>
                                <input type="number" class="form-control" id="editRating" name="rating" step="0.1" min="0" max="5">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="editIsActive" name="isActive">
                                    <label class="form-check-label" for="editIsActive">
                                        Active
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="editIsFeatured" name="isFeatured">
                                    <label class="form-check-label" for="editIsFeatured">
                                        Featured
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Highlights (comma-separated)</label>
                            <input type="text" class="form-control" id="editHighlights" name="highlights">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Includes (comma-separated)</label>
                            <input type="text" class="form-control" id="editIncludes" name="includes">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Excludes (comma-separated)</label>
                            <input type="text" class="form-control" id="editExcludes" name="excludes">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/static/admin/js/admin.js"></script>
    <script>
        // Show Add Tour Modal
        function showAddTourModal() {
            document.getElementById('addTourForm').reset();
            const modal = new bootstrap.Modal(document.getElementById('addTourModal'));
            modal.show();
        }

        // Submit Add Tour Form
        document.getElementById('addTourForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const formData = new FormData(this);
            const data = Object.fromEntries(formData);
            
            // Convert checkboxes
            data.isActive = document.getElementById('addIsActive').checked;
            data.isFeatured = document.getElementById('addIsFeatured').checked;
            
            try {
                const response = await fetch('/admin/tours', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(data)
                });
                
                const contentType = response.headers.get('content-type');
                if (!contentType || !contentType.includes('application/json')) {
                    const text = await response.text();
                    console.error('Non-JSON response:', text);
                    alert('Error: Server returned an invalid response.');
                    return;
                }
                
                const result = await response.json();
                
                if (result.success) {
                    alert('Tour created successfully!');
                    bootstrap.Modal.getInstance(document.getElementById('addTourModal')).hide();
                    location.reload();
                } else {
                    alert('Error: ' + (result.error || 'Failed to create tour'));
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Error: ' + error.message);
            }
        });

        // Edit Tour
        async function editTour(tourId) {
            try {
                const response = await fetch(`/admin/tours/${tourId}`);
                const tour = await response.json();
                
                document.getElementById('editTourId').value = tour._id;
                document.getElementById('editTitle').value = tour.title;
                document.getElementById('editDestination').value = tour.destination;
                document.getElementById('editDescription').value = tour.description;
                document.getElementById('editShortDescription').value = tour.shortDescription || '';
                document.getElementById('editDuration').value = tour.duration;
                document.getElementById('editDurationUnit').value = tour.durationUnit || 'days';
                document.getElementById('editMaxPersons').value = tour.maxPersons || 2;
                document.getElementById('editPrice').value = tour.price;
                document.getElementById('editDiscountPrice').value = tour.discountPrice || '';
                document.getElementById('editImage').value = tour.image || '';
                document.getElementById('editCategory').value = tour.category || 'other';
                document.getElementById('editRating').value = tour.rating || 5;
                document.getElementById('editIsActive').checked = tour.isActive !== false;
                document.getElementById('editIsFeatured').checked = tour.isFeatured || false;
                document.getElementById('editHighlights').value = Array.isArray(tour.highlights) ? tour.highlights.join(', ') : '';
                document.getElementById('editIncludes').value = Array.isArray(tour.includes) ? tour.includes.join(', ') : '';
                document.getElementById('editExcludes').value = Array.isArray(tour.excludes) ? tour.excludes.join(', ') : '';
                
                const modal = new bootstrap.Modal(document.getElementById('editTourModal'));
                modal.show();
            } catch (error) {
                alert('Error loading tour: ' + error.message);
            }
        }

        // Submit Edit Form
        document.getElementById('editTourForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const tourId = document.getElementById('editTourId').value;
            const formData = new FormData(this);
            const data = Object.fromEntries(formData);
            
            // Convert checkboxes
            data.isActive = document.getElementById('editIsActive').checked;
            data.isFeatured = document.getElementById('editIsFeatured').checked;
            
            try {
                const response = await fetch(`/admin/tours/${tourId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(data)
                });
                
                const result = await response.json();
                
                if (result.success) {
                    alert('Tour updated successfully!');
                    bootstrap.Modal.getInstance(document.getElementById('editTourModal')).hide();
                    location.reload();
                } else {
                    alert('Error: ' + (result.error || 'Failed to update tour'));
                }
            } catch (error) {
                alert('Error: ' + error.message);
            }
        });

        // Toggle Status
        async function toggleStatus(tourId, currentStatus, tourTitle) {
            const isActive = currentStatus === 'true' || currentStatus === true;
            const action = isActive ? 'deactivate' : 'activate';
            const confirmMsg = `Are you sure you want to ${action} the tour "${tourTitle}"?`;
            
            if (!confirm(confirmMsg)) return;
            
            try {
                const response = await fetch(`/admin/tours/${tourId}/toggle-status`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                });
                
                const contentType = response.headers.get('content-type');
                if (!contentType || !contentType.includes('application/json')) {
                    const text = await response.text();
                    console.error('Non-JSON response:', text);
                    alert('Error: Server returned an invalid response.');
                    return;
                }
                
                const result = await response.json();
                
                if (result.success) {
                    alert(`Tour ${action}d successfully!`);
                    location.reload();
                } else {
                    alert('Error: ' + (result.error || `Failed to ${action} tour`));
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Error: ' + error.message);
            }
        }

        // Toggle Featured
        async function toggleFeatured(tourId, currentFeatured, tourTitle) {
            const isFeatured = currentFeatured === 'true' || currentFeatured === true;
            const action = isFeatured ? 'unfeature' : 'feature';
            const confirmMsg = `Are you sure you want to ${action} the tour "${tourTitle}"?`;
            
