<!DOCTYPE html>
<html lang="en">

<head>
    <title>Transactions - Admin Dashboard</title>
    <%- include('partical/head'); %>
</head>

<body>
    <div class="wrapper">
        <%- include('partical/sidebar'); %>
        <main class="main-content">
            <%- include('partical/navbar'); %>

            <div class="container-fluid px-4 py-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center mb-4">
                    <h1 class="h3 mb-0">Transactions</h1>
                    <button type="button" class="btn btn-primary btn-sm">
                        <i class="fa fa-download me-2"></i>Export
                    </button>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h6 class="mb-0">All Transactions</h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Invoice #</th>
                                        <th>Customer</th>
                                        <th>Package</th>
                                        <th>Amount</th>
                                        <th>Date</th>
                                        <th>Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>#INV300500</td>
                                        <td>John Doe</td>
                                        <td>Venice - Italy</td>
                                        <td>$799.00</td>
                                        <td>15 Jan 2024</td>
                                        <td><span class="badge bg-success">Paid</span></td>
                                        <td>
                                            <button class="btn btn-sm btn-outline-primary">View</button>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>#INV300499</td>
                                        <td>Jane Smith</td>
                                        <td>Discover Japan</td>
                                        <td>$549.00</td>
                                        <td>14 Jan 2024</td>
                                        <td><span class="badge bg-success">Paid</span></td>
                                        <td>
                                            <button class="btn btn-sm btn-outline-primary">View</button>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>#INV300498</td>
                                        <td>Mike Johnson</td>
                                        <td>Thailand Trip</td>
                                        <td>$649.00</td>
                                        <td>13 Jan 2024</td>
                                        <td><span class="badge bg-warning">Pending</span></td>
                                        <td>
                                            <button class="btn btn-sm btn-outline-primary">View</button>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>#INV300497</td>
                                        <td>Sarah Williams</td>
                                        <td>The New California</td>
                                        <td>$449.00</td>
                                        <td>12 Jan 2024</td>
                                        <td><span class="badge bg-danger">Failed</span></td>
                                        <td>
                                            <button class="btn btn-sm btn-outline-primary">View</button>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/static/admin/js/admin.js"></script>
</body>

</html>


